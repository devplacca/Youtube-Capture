{
  "name": "Youtube Capture",
  "description" : "Capture frame(s) of Youtube videos and save them as png screenshots/thumbnails.",
  "version": "1.0.0",
  "manifest_version": 2,
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      // "16": "assets/logo/igdown16.png",
      // "32": "assets/logo/igdown32.png",
      // "48": "assets/logo/igdown48.png",
      // "128": "assets/logo/igdown128.png"
    }
  },
  "icons": {
      // "16": "assets/logo/igdown16.png",
      // "32": "assets/logo/igdown32.png",
      // "48": "assets/logo/igdown48.png",
      // "128": "assets/logo/igdown128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
   {
     "matches": [
      "https://*.youtube.com/*"
    ],
     "run_at": "document_idle",
     "js": [
        "assets/content/js/content-main.js"
      ],
     "css": [
        "assets/content/css/content-style.css"
     ]
   }
 ],
  "permissions": [
    "declarativeContent"
  ]
}

